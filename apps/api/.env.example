# Environment
NODE_ENV=development

# Server
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://starter:starter_password@localhost:5432/starter_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=3600

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Sentry (optional)
# SENTRY_DSN=your-sentry-dsn

# API Documentation
OPENAPI_TITLE=Turbo Nuxt Starter API
OPENAPI_VERSION=1.0.0
OPENAPI_DESCRIPTION=Production-ready REST API
