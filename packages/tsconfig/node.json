{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "extends": ["./base.json"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}